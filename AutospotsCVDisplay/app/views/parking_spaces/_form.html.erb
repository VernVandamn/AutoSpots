<%= form_for(parking_space) do |f| %>
  <% if parking_space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(parking_space.errors.count, "error") %> prohibited this parking_space from being saved:</h2>

      <ul>
      <% parking_space.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-horizontal'>
    <div class="form-group field">
      <%= f.label :name, 'Parking Lot Name', class: 'col-sm-2' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div id='linktogps'>
      <%= link_to 'Find latitude and longitude for your address', 'https://www.gps-coordinates.net/gps-coordinates-converter', target: :_blank, class: 'btn btn-default' %>
    </div>

    <div class="addPadding">
      <div class="form-group field makeHorizontal">
        <%= f.label :latitude, 'Latitude', class: 'col-sm-6' %>
        <%= f.text_field :latitude, class: 'form-control' %>
      </div>

      <div class="form-group field makeHorizontal">
        <%= f.label :longitude, 'Longitude', class: 'col-sm-6' %>
        <%= f.text_field :longitude, class: 'form-control' %>
      </div>
      <br>
    </div>

    <div class="form-group field">
      <%= f.label :image_url, 'Image URL', class: 'col-sm-2' %>
      <%= f.text_field :image_url, :readonly => true, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :parking_coords, 'Output', class: 'col-sm-2' %>
      <%= f.text_area :parking_coords, :rows => "3", :readonly => true, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
