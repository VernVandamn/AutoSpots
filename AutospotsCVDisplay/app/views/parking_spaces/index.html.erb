<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Parking Lots</h1>

  <table class="table table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Parking Data</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @parking_spaces.each do |parking_space| %>
        <tr data-link="<%= parking_space_path(parking_space) %>" id="datalink">
          <td class="table-name"><%= parking_space.name %></td>
          <td class="table-image"><%= image_tag parking_space.image_url, height: '75', width: '75' %></td>
          <td class="table-data"><%= parking_space.latitude %></td>
          <td class="table-data"><%= parking_space.longitude %></td>
          <td><%= parking_space.parking_coords %></td>
          <td><%= link_to "Show", parking_space, class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', parking_space, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Parking Space', new_parking_space_path %>
</div>
